<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.AbsoluteLayout">
    <ContentPage.Content>
        <AbsoluteLayout>
            <BoxView Color="Aqua"
                         AbsoluteLayout.LayoutBounds="0,0,1,1"
                         AbsoluteLayout.LayoutFlags="All"/>
                <!--x,y,width,height-->
                <BoxView Color="Yellow"
                         AbsoluteLayout.LayoutBounds="0.5,0.1,100,100" 
                         AbsoluteLayout.LayoutFlags="PositionProportional"/>
            <Label TextColor="Black" 
                   Text="This is Absolute Layout" 
                   HorizontalTextAlignment="Center"
                   AbsoluteLayout.LayoutBounds="0.5,0.5,100,100"   
                   AbsoluteLayout.LayoutFlags="XProportional,YProportional"  />
            <!--PositionProportional-->
            <Button Text="Button" BackgroundColor="Silver"
                        AbsoluteLayout.LayoutBounds="0,1,1,50"
                        AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"/>
                <!-- AbsoluteLayout.LayoutBounds="0,0,100,100"/>  units -->
            </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>